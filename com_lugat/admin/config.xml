<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		name="terms"
		label="COM_LUGAT_CONFIG_TERM_SETTINGS_LABEL"
		description="COM_LUGAT_CONFIG_TERM_SETTINGS_DESC"
	>
		<field
			name="show_terms"
			type="radio"
			label="COM_LUGAT_LUGAT_FIELD_SHOW_TERMS_LABEL"
			description="COM_LUGAT_LUGAT_FIELD_SHOW_TERMS_DESC"
			default="0"
		>
			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>
		</field>
	</fieldset>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
	>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_lugat"
			section="component"
		/>
	</fieldset>
</config>
